<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FirstStartSearchActivity">


    <SearchView
        android:id="@+id/searchViewStartActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/isu_blue"
        android:iconifiedByDefault="false"
        android:queryBackground="@color/zeroColor"
        android:queryHint="Поиск..."
        android:theme="@style/Theme.ISUSchedule.Search"></SearchView>

    <ListView
        android:id="@+id/listViewStartActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchViewStartActivity"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="16dp"
        android:padding="0dp"
        android:scrollbars="none" />




</RelativeLayout>
